{
  "name": "triquanta/drupal-project",
  "description": "Triquanta project template for Drupal 8 projects with Composer and Behat",
  "type": "project",
  "license": "GPL-2.0+",
  "authors": [
    {
      "name": "dmsmidt",
      "role": ""
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://packagist.drupal-composer.org"
    },
    {
      "type": "package",
      "package": {
        "name": "pfrenssen/phpcs-pre-push",
        "version": "1.0",
        "type": "git-hook",
        "source": {
          "url": "https://gist.github.com/498fc52fea3f965f6640.git",
          "type": "git",
          "reference": "master"
        }
      }
    }
  ],
  "require": {
    "composer/composer": "~1.0",
    "composer/installers": "^1.0.20",
    "drupal-composer/drupal-scaffold": "^2.0.1",
    "cweagans/composer-patches": "~1.0",
    "drupal/console": "~1.0",
    "drupal/core": "~8.0",
    "drush/drush": "~8.0",
    "php": ">=5.5.9"
  },
  "require-dev": {
    "behat/mink": "~1.7",
    "behat/mink-goutte-driver": "~1.2",
    "drupal/coder": "~8.2.7",
    "drupal/config_update": "8.1.*@dev",
    "drupal/devel": "8.1.*@dev",
    "drupal/drupal-extension": "~3.0",
    "jcalderonzumba/gastonjs": "^1.1@dev",
    "jcalderonzumba/mink-phantomjs-driver": "~0.3.1",
    "mikey179/vfsStream": "~1.2",
    "pfrenssen/phpcs-pre-push": "1.0",
    "phpunit/phpunit": "~4.8",
    "symfony/css-selector": "~2.8"
  },
  "conflict": {
    "drupal/drupal": "*"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Drupal\\DrupalProject\\": "tests/src",
      "DrupalProject\\": "src"
    },
    "classmap": [
      "scripts/composer/ScriptHandler.php"
    ]
  },
  "scripts": {
    "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
    "drupal-prepare": "DrupalProject\\composer\\ScriptHandler::prepareDrupal",
    "drupal-install": "DrupalProject\\composer\\ScriptHandler::installDrupal",
    "pre-install-cmd": [
      "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
    ],
    "pre-update-cmd": [
      "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
    ]
  },
  "extra": {
    "installer-paths": {
      "docroot/core": [
        "type:drupal-core"
      ],
      "docroot/modules/contrib/{$name}": [
        "type:drupal-module"
      ],
      "docroot/profiles/contrib/{$name}": [
        "type:drupal-profile"
      ],
      "docroot/themes/contrib/{$name}": [
        "type:drupal-theme"
      ],
      "drush/contrib/{$name}": [
        "type:drupal-drush"
      ]
    }
  },
  "drupal-scaffold": {
    "excludes": [],
    "includes": [
      ".csslintrc",
      ".editorconfig",
      ".eslintignore",
      ".eslintrc",
      ".gitattributes",
      ".htaccess",
      "index.php",
      "robots.txt",
      "update.php",
      "web.config"
    ],
    "omit-defaults": true
  }
}
